<!DOCTYPE html>
<html>
  <head>
    <title>McqApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash.present? %>
      <% flash.each do |key, value| %>
        <div class="ui floating message hidden position_absolute z_index_increased flash_center">
          <i class="close icon"></i>
          <!-- <div class="header">
          </div> -->
          <div class="flash_message_content">
            <%= value %>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
  <% if flash.present? %>
    <script type="text/javascript">
      show_flash_message();
    </script>
  <% end %>
</html>
